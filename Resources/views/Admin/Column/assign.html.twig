<td class="center">
    {% if item.closed %}
        <div class="label">{{ 'Closed'|trans }}</div>
    {% elseif item.started %}
        <a class="btn" href="{{ path(action.route, { 'id': item.id }) }}">{{ action.label|trans }}</a>
    {% else %}
        <a class="btn" href="{{ path(action.route, { 'id': item.id }) }}">{{ action.label|trans }}</a>
    {% endif %}
</td>
